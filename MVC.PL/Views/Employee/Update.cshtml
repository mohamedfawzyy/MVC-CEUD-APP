@model EmployeeViewModel;
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="w-57 mx-auto p-4 mt-4">
    <h1 class="alert alert-warning text-center">Update Emoloyee @Model.Name</h1>
    <form asp-action="Update">
        <div asp-validation-summary="ModelOnly"></div>
        <partial name="PartialViews/CreateUpdateEmpPartial" />
        <div class="mb-3">
            <label>Your Gender:</label>
            <div class="form-check">
                @if (Model.Gender.ToString().Equals("Male"))
                {
                    <input class="form-check-input" type="radio" id="Male" name="Gender" value="1" checked />

                }
                else
                {
                    <input class="form-check-input" type="radio" id="Male" name="Gender" value="1" />
                }

                <label class="form-check-label" for="Male">Male</label>
            </div>
            <div class="form-check">
                @if (Model.Gender.ToString().Equals("Female"))
                {
                    <input class="form-check-input" type="radio" id="Female" name="Gender" value="2" checked>
                }
                else
                {
                    <input class="form-check-input" type="radio" id="Female" name="Gender" value="2">
                }
                <label class="form-check-label" for="Female">Female</label>
            </div>
        </div>

        <button type="submit" class="btn btn-warning">Update</button>
        <a asp-action="Index" asp-controller="Employee" class="btn btn-light">Cancel</a>
    </form>
</div>
@section ValidationInputs {
    <partial name="_ValidationScriptsPartial" />
}

