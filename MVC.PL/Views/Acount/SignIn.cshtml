@model SignInViewModel;
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="agileits-top">
	<form asp-action="SignIn">
		<div class="textDanger" asp-validation-summary="ModelOnly"></div>
		<input class="text email" asp-for="Email" placeholder="Email" required="">
		<input class="text" asp-for="Password" placeholder="Password" required="">
		<div class="wthree-text">
			<label class="anim">
				<input asp-for="RememberMe" class="checkbox">
				<span>Remember Me</span>
			</label>
			<div class="clear"> </div>
		</div>
		<input type="submit" value="Sign In">
	</form>
	<p>You Don't have an Account? <a asp-controller="Acount" asp-action="SignUp"> Register Now!</a></p>
	<p> <a asp-controller="Acount" asp-action="ForgetPassword"> Forget Password!!</a></p>

</div>

@section ValidatoinInputs {
	<partial name="_ValidationScriptsPartial" />
}