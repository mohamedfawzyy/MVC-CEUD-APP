@model SignUpViewModel;
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<div class="agileits-top">
	<form asp-action="SignUp">
		<div class="textDanger" asp-validation-summary="ModelOnly"></div>
		<input style="margin-block:10px;" class="text" asp-for="Fname" placeholder="First Name" required="">
		<input style="margin-block:10px;" class="text" asp-for="Lname" placeholder="Last Name" required="">
		<input style="margin-block:10px;"  class="text" asp-for="UserName" placeholder="Username" required="">
		<input class="text email" asp-for="Email" placeholder="Email" required="">
		<input class="text" asp-for="Password" placeholder="Password" required="">
		<input class="text w3lpass" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">
		<input class="text" asp-for="PhoneNumber" placeholder="PhoneNumber" required="">
		<div class="wthree-text">
			<label class="anim">
				<input asp-for="IsAgree" class="checkbox" required="">
				<span>I Agree To The Terms & Conditions</span>
			</label>
			<div class="clear"> </div>
		</div>
		<input type="submit" value="SIGNUP">
	</form>
	<p>Don't have an Account? <a asp-controller="Acount" asp-action="SignIn"> Login Now!</a></p>
</div>
@section ValidatoinInputs {
	<partial name="_ValidationScriptsPartial"/>
}

